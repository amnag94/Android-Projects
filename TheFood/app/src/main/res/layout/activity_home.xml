<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.HomeActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/card_container_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/card_radius_corner">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/new_list"
                android:layout_width="@dimen/option_icon_size"
                android:layout_height="@dimen/option_icon_size"
                android:layout_margin="@dimen/medium_margin"
                android:src="@drawable/add_icon"/>

            <TextView
                android:id="@+id/list_add_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/large_margin"
                android:textAlignment="center"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_L"
                android:text="Add List" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_container_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_container_add"
        app:cardCornerRadius="@dimen/card_radius_corner">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/edit_list"
                android:layout_width="@dimen/option_icon_size"
                android:layout_height="@dimen/option_icon_size"
                android:layout_margin="@dimen/medium_margin"
                android:src="@drawable/edit_icon"/>

            <TextView
                android:id="@+id/list_edit_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/large_margin"
                android:textAlignment="center"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_L"
                android:text="Edit List" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_container_cook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_container_edit"
        app:cardCornerRadius="@dimen/card_radius_corner">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cook_icon"
                android:layout_width="@dimen/option_icon_size"
                android:layout_height="@dimen/option_icon_size"
                android:layout_margin="@dimen/medium_margin"
                android:src="@drawable/cook_icon"/>

            <TextView
                android:id="@+id/cook_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/large_margin"
                android:textAlignment="center"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_L"
                android:text="Let's Cook" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>